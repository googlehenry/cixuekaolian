<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/unit_line_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:padding="@dimen/dp_5"
    android:background="@drawable/selector_button_round_corner_card_lian">

    <ImageView
        android:id="@+id/start_excercise"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_18"
        android:layout_gravity="center"
        android:contentDescription="进入学习"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_richeng_time_start" />

    <TextView
        android:id="@+id/unit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_2"
        app:layout_constraintStart_toEndOf="@id/start_excercise"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/nav_unit_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unit_title" />

    <TextView
        android:id="@+id/nav_unit_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2ea5ef"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/nav_unit_error"
        app:layout_constraintTop_toBottomOf="@id/unit_title" />

    <TextView
        android:id="@+id/nav_unit_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/nav_unit_done"
        app:layout_constraintTop_toBottomOf="@id/unit_title" />

</androidx.constraintlayout.widget.ConstraintLayout>