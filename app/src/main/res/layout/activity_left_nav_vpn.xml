<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.ci.CiPage0Activity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/side_nav_bar"
            android:paddingLeft="@dimen/dp_40"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:singleLine="true"
            android:text="VPN服务器"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/vpn_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="200"
            android:paddingLeft="@dimen/dp_40"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/vpn_start"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textColor="#ffffff"
                android:background="@drawable/selector_button_round_cornor_orange"
                android:text="启动VPN" />

            <Button
                android:id="@+id/vpn_status"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:background="@drawable/selector_button_round_cornor_blue"
                android:text="VPN状态" />

            <Button
                android:id="@+id/vpn_stop"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textColor="#ffffff"
                android:background="@drawable/selector_button_round_cornor_red"
                android:text="停止VPN" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/header_back"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:src="@drawable/shape_arrow_back_light"
            android:tooltipText="返回上一级" />

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>