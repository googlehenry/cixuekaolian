<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lian_item_option_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginRight="5dp"
    android:background="@drawable/selector_button_round_corner_dark"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lian_item_result_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/icon_lian_result_tick"
        android:visibility="gone" />

    <TextView
        android:id="@+id/lian_item_option_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16" />

    <EditText
        android:id="@+id/lian_item_answer_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

</LinearLayout>