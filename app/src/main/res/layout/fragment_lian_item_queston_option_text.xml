<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lian_item_option_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/selector_button_round_corner_dark"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lian_item_result_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/icon_lian_result_tick"
        android:visibility="gone" />

    <TextView
        android:id="@+id/lian_item_option_main"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <EditText
        android:id="@+id/lian_item_answer_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:id="@+id/lian_item_correction_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/lian_item_correction_from"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="@dimen/sp_30"
                android:layout_height="wrap_content"
                android:text="改为" />

            <EditText
                android:id="@+id/lian_item_correction_to"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/lian_item_correction_hints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="改词: A->B 添词:A C->A B C 删词:A B C->A C" />

    </LinearLayout>


</LinearLayout>