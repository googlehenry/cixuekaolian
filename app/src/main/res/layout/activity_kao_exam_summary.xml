<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.lian.LianPage0ActivityPractice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/side_nav_bar">

            <ImageView
                android:id="@+id/header_back"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:src="@drawable/shape_arrow_back_light"
                android:tooltipText="返回上一级" />


            <TextView
                android:id="@+id/header_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="试卷概要"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>

        <TextView
            android:id="@+id/summary_exam_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="@dimen/sp_20" />

        <LinearLayout
            android:id="@+id/floating_button_score_holder"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="right|top"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_icon_double_underscore"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/floating_button_score_id"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10" />

            <TextView
                android:id="@+id/floating_button_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="#ff0000"
                android:textSize="32sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:text="分"
                android:textColor="#ff0000"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/summary_exam_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textSize="@dimen/sp_18" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_exam_sections"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:listitem="@layout/activity_kao_exam_section_item" />

        <LinearLayout
            android:id="@+id/linearLayout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="@dimen/dp_10">

            <Button
                android:id="@+id/btn_kao_resume"
                style="@style/rectangle_blue"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/selector_button_round_cornor_orange"
                android:text="查看上一次"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_lian_start"
                style="@style/rectangle_blue"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_40"
                android:text="模拟考试" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sidebar_action_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sidebar_action_hideme"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="right"
            android:clickable="true"
            android:src="@drawable/selector_lian_result_cross_gray" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_square_cornor_primary_round5"
            android:orientation="vertical"
            android:padding="@dimen/dp_2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:text="我的"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sidebar_action_mywords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@drawable/selector_button_square_cornor_blue"
                android:text="单词"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/sidebar_action_myquestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@drawable/selector_button_square_cornor_blue"
                android:text="题"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/sidebar_action_mynotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/selector_button_square_cornor_blue"
                android:text="笔记"
                android:textColor="#ffffff" />

        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>